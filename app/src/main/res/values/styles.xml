<resources>
    <!-- Base application theme. -->
    <style name="Theme.DevelopersLife" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="tabStyle">@style/Widget.DevelopersLife.TabLayout</item>
    </style>
    
    <style name="Widget.DevelopersLife.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.DevelopersLife.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.DevelopersLife.TabLayout.Button</item>
    </style>

    <style name="ThemeOverlay.DevelopersLife.TabLayout" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="TextAppearance.DevelopersLife.TabLayout.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>